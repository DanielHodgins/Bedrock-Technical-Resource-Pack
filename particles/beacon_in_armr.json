{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "addon:beacon_in_armr",
      "basic_render_parameters": {
        "material": "particles_blend",
        "texture": "textures/beacon"
      }
    },
    "components": {
      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },
      "minecraft:emitter_lifetime_once": {},
      "minecraft:emitter_shape_point": {
	"offset": [
	  "v.spawn_marker_x = math.floor(query.position(0)); return 0;",
	  "v.spawn_marker_y = query.position(1) - 1.0; return 0;",
	  "v.spawn_marker_z = math.floor(query.position(2)); return 0;"
	]
      },
      "minecraft:particle_lifetime_expression": {
        "expiration_expression": "(query.effect_particle_count > 56 && v.particle_age > 1) || (query.distance_from_camera < 32 && !query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:emerald_block', 'minecraft:gold_block', 'minecraft:diamond_block', 'minecraft:iron_block', 'minecraft:netherite_block'))",
        "max_lifetime": 86400
      },
      "minecraft:particle_motion_parametric": {
	"relative_position": [
	  "v.spawn_marker_x + (v.side == 'east' ? v.width/2 : (v.side == 'west' ? -v.width/2 : 0))",
	  "v.spawn_marker_y + (v.side == 'up' ? v.height - (v.width/2) : (v.side == 'down' ? -v.width/2 : (v.height/2) - (v.width/2)))",
	  "v.spawn_marker_z + (v.side == 'north' ? -v.width/2 : (v.side == 'south' ? v.width/2 : 0))"
	],
	"direction": [
	  "v.side == 'east' ? -1 : (v.side == 'west' ? 1 : 0)",
	  "v.side == 'up' ? 1 : (v.side == 'down' ? -1 : 0)",
	  "v.side == 'north' ? 1 : (v.side == 'south' ? -1 : 0)"
	],
	"rotation": "v.rot"
      },
      "minecraft:particle_appearance_billboard": {
        "size": [ "v.width/2", "v.side == 'up' ? v.width/2 : (v.side == 'down' ? v.width/2 : v.height/2)" ],
        "facing_camera_mode": "direction_z",
        "uv": {
          "texture_width": 1,
          "texture_height": 8,
          "uv": [ 0, "v.uv_z" ],
          "uv_size": [ 1, 1 ]
        }
      }
    }
  }
}
