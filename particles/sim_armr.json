{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "addon:sim_armr",
      "basic_render_parameters": {
        "material": "particles_blend",
        "texture": "textures/sim_distance"
      }
    },
    "components": {
      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },
      "minecraft:emitter_lifetime_once": {},
      "minecraft:emitter_shape_point": {
	"offset": [
	  "v.sim_loc_x = (math.floor(query.position(0)/16)*16) + 8; return 0;",
	  "v.sim_loc_y = query.position(1) + 0.1; return 0;",
	  "v.sim_loc_z = (math.floor(query.position(2)/16)*16) + 8; return 0;"
	]
      },
      "minecraft:particle_lifetime_expression": {
        "expiration_expression": "(query.effect_particle_count > v.p_cap && v.particle_age > 1) || (query.distance_from_camera < 32 && query.get_equipped_item_name(0) != 'stick')",
        "max_lifetime": 86400
      },
      "minecraft:particle_motion_parametric": {
	"relative_position": [
	  "v.sim_loc_x",
	  "v.sim_loc_y",
	  "v.sim_loc_z"
	],
	"direction": [ 0, -1, 0 ]
      },
      "minecraft:particle_appearance_billboard": {
        "size": [ 200, 200 ],
        "facing_camera_mode": "direction_z"
      }
    }
  }
}
